modules = ["python-3.12", "c-clang14", "web", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run Hugo"

[[workflows.workflow]]
name = "Run Hugo"
author = 18971042
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "hugo server --bind=0.0.0.0 --port=5000 --baseURL=https://$REPL_SLUG.$REPL_OWNER.repl.co"

[[ports]]
localPort = 5000
externalPort = 80
