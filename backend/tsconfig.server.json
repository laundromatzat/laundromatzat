{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist-api",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}